class Solution(object):
    def isBipartite(self, graph):
        n = len(graph)
        color = [0] * n  

        for i in range(n):
            if color[i] != 0:
                continue
            queue = [i]
            color[i] = 1 

            while queue:
                node = queue.pop(0)
                for neighbor in graph[node]:
                    if color[neighbor] == 0:
                        color[neighbor] = -color[node] 
                        queue.append(neighbor)
                    elif color[neighbor] == color[node]:
                        return False  
        return True 